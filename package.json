{
  "name": "leet-speak-encoder",
  "version": "1.0.0",
  "description": "A simple utility to convert text into leet speak.",
  "main": "main.js",
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=5.0.0",
    "yarn": ">=0.27.x"
  },
  "scripts": {
    "build-css": "postcss './src/styles/styles.css'",
    "start": "set NODE_ENV=development && npm run server | npm run watch-css",
    "start:beta": "npm run server",
    "start:cli": "set NODE_ENV=development && node ./src/scripts/cli.js",
    "build": "set NODE_ENV=production && babel ./src/scripts/main.js --out-file ./dist/scripts/main.js",
    "server": "nodemon src/scripts/server.js -e html, css, js",
    "test": "set NODE_ENV=test && eslint ./src/**/*.js",
    "watch-css": "nodemon -e css -x 'npm run build-css'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alexdevero/leet-speak-converter.git"
  },
  "keywords": [
    "converter",
    "leet",
    "language",
    "speak",
    "javascript",
    "open",
    "open-source",
    "source"
  ],
  "author": "Alex Devero <deveroalex@gmail.com> (http://github.com/alexdevero)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/alexdevero/leet-speak-converter/issues"
  },
  "homepage": "https://github.com/alexdevero/leet-speak-converter#readme",
  "dependencies": {
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.1",
    "html-loader": "^0.5.1",
    "postcss-loader": "^2.0.8",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.9.0",
    "nodemon": "^1.12.1",
    "webpack-dev-server": "^2.9.2"
  }
}
